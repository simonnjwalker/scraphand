{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "types": ["node"],

    "skipLibCheck": true
  },

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "dist",
    "node_modules"
  ]
}
